    }

    .stat-small-label {
        font-size: 13px;
        color: var(--medium-gray);
    }

    .stat-small-percentage {
        font-size: 12px;
        color: var(--primary-color);
        font-weight: 600;
        margin-top: 4px;
    }

    .time-period-card {
        background: white;
        border-radius: 12px;
