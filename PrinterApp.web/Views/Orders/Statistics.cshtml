    }

    .period-header h5 {
        margin: 0;
        color: var(--primary-color);
        font-size: 18px;
    }

    .period-stats {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .period-stat {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .period-label {
        font-size: 13px;
        color: var(--medium-gray);
    }

    .period-value {
        font-size: 18px;
        font-weight: bold;
        color: var(--dark-gray);
    }

    .info-card {
        background: white;
        border-radius: 10px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.06);
