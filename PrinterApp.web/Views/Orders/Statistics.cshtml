@model PrinterApp.Models.ViewModels.OrderStatisticsViewModel
@inject PrinterApp.Services.Interfaces.ILanguageService Lang

@{
    ViewData["Title"] = "إحصائيات الطلبات";
}

<div class="content-container">
    <div class="page-header">
        <div>
            <h2>📊 إحصائيات الطلبات</h2>
            <p class="text-muted">عرض شامل لإحصائيات وتقارير جميع الطلبات</p>
        </div>
        <div class="header-actions">
            <a asp-action="Index" class="btn-secondary-custom">
                🔙 @Lang.GetText("Back")
            </a>
        </div>
    </div>

    <!-- إحصائيات عامة -->
    <div class="section-header">
        <h4>📈 الإحصائيات العامة</h4>
    </div>
    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">📦</div>
            <div class="stat-content">
                <div class="stat-value">@Model.TotalOrders</div>
                <div class="stat-label">إجمالي الطلبات</div>
            </div>
        </div>
        <div class="stat-card stat-success">
            <div class="stat-icon">✅</div>
            <div class="stat-content">
                <div class="stat-value">@Model.ActiveOrders</div>
                <div class="stat-label">الطلبات النشطة</div>
            </div>
        </div>
        <div class="stat-card stat-warning">
            <div class="stat-icon">⏸️</div>
            <div class="stat-content">
                <div class="stat-value">@Model.InactiveOrders</div>
                <div class="stat-label">الطلبات غير النشطة</div>
            </div>
        </div>
        <div class="stat-card stat-info">
            <div class="stat-icon">📊</div>
            <div class="stat-content">
                <div class="stat-value">@Model.CompletionRate.ToString("F2")%</div>
                <div class="stat-label">نسبة الإنجاز</div>
            </div>
        </div>
    </div>

    <!-- إحصائيات حسب الحالة -->
    <div class="section-header" style="margin-top: 40px;">
        <h4>🔄 إحصائيات حسب الحالة</h4>
    </div>
    <div class="row g-3">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-pending">
                <div class="stat-small-icon">⏳</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.PendingOrders</div>
                    <div class="stat-small-label">طلبات معلقة</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-review">
                <div class="stat-small-icon">🔍</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.UnderReviewOrders</div>
                    <div class="stat-small-label">تحت المراجعة</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-progress">
                <div class="stat-small-icon">⚙️</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.InProgressOrders</div>
                    <div class="stat-small-label">قيد التنفيذ</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-manufacturing">
                <div class="stat-small-icon">🏭</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.InManufacturingOrders</div>
                    <div class="stat-small-label">قيد التصنيع</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-printing">
                <div class="stat-small-icon">🖨️</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.InPrintingOrders</div>
                    <div class="stat-small-label">قيد الطباعة</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-completed">
                <div class="stat-small-icon">✅</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.CompletedOrders</div>
                    <div class="stat-small-label">طلبات مكتملة</div>
                    <div class="stat-small-percentage">@Model.CompletedPercentage%</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-cancelled">
                <div class="stat-small-icon">❌</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.CancelledOrders</div>
                    <div class="stat-small-label">طلبات ملغية</div>
                    <div class="stat-small-percentage">@Model.CancelledPercentage%</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-hold">
                <div class="stat-small-icon">⏸️</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.OnHoldOrders</div>
                    <div class="stat-small-label">طلبات معلقة مؤقتاً</div>
                </div>
            </div>
        </div>
    </div>

    <!-- إحصائيات حسب المرحلة -->
    <div class="section-header" style="margin-top: 40px;">
        <h4>📋 إحصائيات حسب المرحلة</h4>
    </div>
    <div class="row g-3">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-stage-order">
                <div class="stat-small-icon">📝</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.OrderStageCount</div>
                    <div class="stat-small-label">مرحلة الطلب</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-stage-review">
                <div class="stat-small-icon">📋</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.ReviewStageCount</div>
                    <div class="stat-small-label">مرحلة المراجعة</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-stage-manufacturing">
                <div class="stat-small-icon">⚙️</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.ManufacturingStageCount</div>
                    <div class="stat-small-label">مرحلة التصنيع</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-stage-printing">
                <div class="stat-small-icon">🖨️</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.PrintingStageCount</div>
                    <div class="stat-small-label">مرحلة الطباعة</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card-small stat-stage-completed">
                <div class="stat-small-icon">✅</div>
                <div class="stat-small-content">
                    <div class="stat-small-value">@Model.CompletedStageCount</div>
                    <div class="stat-small-label">مرحلة مكتملة</div>
                </div>
            </div>
        </div>
    </div>

    <!-- إحصائيات الفترة الزمنية -->
    <div class="section-header" style="margin-top: 40px;">
        <h4>📅 إحصائيات الفترة الزمنية</h4>
    </div>
    <div class="row g-3">
        <div class="col-lg-3 col-md-6">
            <div class="time-period-card">
                <div class="period-header">
                    <div class="period-icon">📅</div>
                    <h5>اليوم</h5>
                </div>
                <div class="period-stats">
                    <div class="period-stat">
                        <span class="period-label">إجمالي الطلبات:</span>
                        <span class="period-value">@Model.TodayOrders</span>
                    </div>
                    <div class="period-stat">
                        <span class="period-label">مكتمل:</span>
                        <span class="period-value text-success">@Model.TodayCompletedOrders</span>
                    </div>
                    <div class="period-stat">
                        <span class="period-label">ملغي:</span>
                        <span class="period-value text-danger">@Model.TodayCancelledOrders</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="time-period-card">
                <div class="period-header">
                    <div class="period-icon">📆</div>
                    <h5>الأسبوع</h5>
                </div>
                <div class="period-stats">
                    <div class="period-stat">
                        <span class="period-label">إجمالي الطلبات:</span>
                        <span class="period-value">@Model.WeekOrders</span>
                    </div>
                    <div class="period-stat">
                        <span class="period-label">مكتمل:</span>
                        <span class="period-value text-success">@Model.WeekCompletedOrders</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="time-period-card">
                <div class="period-header">
                    <div class="period-icon">📅</div>
                    <h5>الشهر</h5>
                </div>
                <div class="period-stats">
                    <div class="period-stat">
                        <span class="period-label">إجمالي الطلبات:</span>
                        <span class="period-value">@Model.MonthOrders</span>
                    </div>
                    <div class="period-stat">
                        <span class="period-label">مكتمل:</span>
                        <span class="period-value text-success">@Model.MonthCompletedOrders</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="time-period-card">
                <div class="period-header">
                    <div class="period-icon">📊</div>
                    <h5>السنة</h5>
                </div>
                <div class="period-stats">
                    <div class="period-stat">
                        <span class="period-label">إجمالي الطلبات:</span>
                        <span class="period-value">@Model.YearOrders</span>
                    </div>
                    <div class="period-stat">
                        <span class="period-label">مكتمل:</span>
                        <span class="period-value text-success">@Model.YearCompletedOrders</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- متوسطات وإحصائيات إضافية -->
    <div class="row g-3" style="margin-top: 30px;">
        <div class="col-lg-3 col-md-6">
            <div class="info-card">
                <div class="info-icon">📊</div>
                <div class="info-content">
                    <div class="info-value">@Model.AverageDailyOrders.ToString("F2")</div>
                    <div class="info-label">متوسط الطلبات اليومية</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="info-card">
                <div class="info-icon">⏱️</div>
                <div class="info-content">
                    <div class="info-value">@Model.AverageCompletionTime.ToString("F2")</div>
                    <div class="info-label">متوسط وقت الإنجاز (أيام)</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="info-card alert-warning">
                <div class="info-icon">⚠️</div>
                <div class="info-content">
                    <div class="info-value">@Model.LateOrders</div>
                    <div class="info-label">طلبات متأخرة</div>
                    <div class="info-percentage">@Model.LateOrdersPercentage.ToString("F2")%</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="info-card">
                <div class="info-icon">📦</div>
                <div class="info-content">
                    <div class="info-value">@Model.TotalQuantity.ToString("N0")</div>
                    <div class="info-label">إجمالي الكمية</div>
                </div>
            </div>
        </div>
    </div>

    <!-- إحصائيات الكمية -->
    <div class="section-header" style="margin-top: 40px;">
        <h4>📦 إحصائيات الكمية</h4>
    </div>
    <div class="row g-3">
        <div class="col-md-4">
            <div class="quantity-card">
                <div class="quantity-icon">✅</div>
                <div class="quantity-content">
                    <div class="quantity-value">@Model.CompletedQuantity.ToString("N0")</div>
                    <div class="quantity-label">الكمية المكتملة</div>
                    <div class="progress" style="height: 8px; margin-top: 10px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @Model.QuantityCompletionPercentage%"></div>
                    </div>
                    <div class="quantity-percentage">@Model.QuantityCompletionPercentage%</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="quantity-card">
                <div class="quantity-icon">⏳</div>
                <div class="quantity-content">
                    <div class="quantity-value">@Model.PendingQuantity.ToString("N0")</div>
                    <div class="quantity-label">الكمية المعلقة</div>
                    <div class="progress" style="height: 8px; margin-top: 10px;">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @((Model.TotalQuantity > 0 ? (decimal)Model.PendingQuantity / Model.TotalQuantity * 100 : 0))%"></div>
                    </div>
                    <div class="quantity-percentage">@((Model.TotalQuantity > 0 ? Math.Round((decimal)Model.PendingQuantity / Model.TotalQuantity * 100, 2) : 0))%</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="quantity-card">
                <div class="quantity-icon">📦</div>
                <div class="quantity-content">
                    <div class="quantity-value">@Model.TotalQuantity.ToString("N0")</div>
                    <div class="quantity-label">إجمالي الكمية</div>
                    <div class="progress" style="height: 8px; margin-top: 10px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 100%"></div>
                    </div>
                    <div class="quantity-percentage">100%</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
