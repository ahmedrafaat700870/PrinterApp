@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const translations = {
            fileSizeTooLarge: '@Lang.GetText("FileSizeTooLarge")',
            pleaseSelectImageFile: '@Lang.GetText("PleaseSelectImageFile")'
        };

        function previewImage(event) {
            const file = event.target.files[0];
