@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResources> Localizer
@using Microsoft.AspNetCore.Localization

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var isRtl = requestCulture?.RequestCulture.Culture.TextInfo.IsRightToLeft ?? false;
}

<!DOCTYPE html>
<html lang="@(requestCulture?.RequestCulture.Culture.Name ?? "en")" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Permission App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom-theme.css" asp-append-version="true" />
    @if (isRtl)
    {
        <link rel="stylesheet" href="~/css/rtl.css" asp-append-version="true" />
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    🛡️ Printer App
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                🏠 @Localizer["Home"]
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin") || User.HasClaim("Permission", "PERMISSIONS.Manage"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Permissions" asp-action="Index">
                                        🛡️ @Localizer["Permissions"]
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="UserManagement" asp-action="Index">
                                        👥 @Localizer["Users"]
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Settings" asp-action="Index">
                                        ⚙️ @Localizer["Settings"]
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cores" asp-action="Index">
                                    🎯 @Localizer["Cores"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cartons" asp-action="Index">
                                    📦 Cartons
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Knives" asp-action="Index">
                                    🔪 Knives
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="RollDirections" asp-action="Index">
                                    🔄 Roll Directions
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Machines" asp-action="Index">
                                    🖨️ Machines
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item" style="margin-right: 15px;">
                            <partial name="_LanguageSwitcher" />
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    👤 @Localizer["Welcome"], @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span style="background: var(--warning-color); padding: 2px 8px; border-radius: var(--border-radius-sm); font-size: 11px; margin-left: 5px;">ADMIN</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">
                                        🚪 @Localizer["Logout"]
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    🔐 @Localizer["Login"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    📝 @Localizer["Register"]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-custom">
        <div class="container-fluid">
            <p>&copy; 2024 Permission App. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>