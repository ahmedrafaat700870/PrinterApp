@model PermissionViewModel

@{
    ViewData["Title"] = "Create Permission";
}

<div class="content-container">
    <div class="page-header">
        <h2>➕ Create New Permission</h2>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <h2>Permission Details</h2>
        </div>
        <div class="card-body-custom">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <form asp-action="Create" method="post">
                <div class="form-group-custom">
                    <label asp-for="Name" class="form-label-custom">Permission Name</label>
                    <input asp-for="Name" class="form-control-custom" placeholder="e.g., View Users, Edit Posts" />
                    <span asp-validation-for="Name" class="text-danger-custom"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Code" class="form-label-custom">Permission Code</label>
                    <input asp-for="Code" class="form-control-custom" placeholder="e.g., VIEW_USERS, EDIT_POSTS" />
                    <span asp-validation-for="Code" class="text-danger-custom"></span>
                    <small style="color: var(--medium-gray); display: block; margin-top: 5px;">
                        Use uppercase letters and underscores only (e.g., MANAGE_USERS)
                    </small>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Description" class="form-label-custom">Description</label>
                    <textarea asp-for="Description" class="form-control-custom"
                              placeholder="Describe what this permission allows users to do..."></textarea>
                    <span asp-validation-for="Description" class="text-danger-custom"></span>
                </div>

                <div class="action-buttons">
                    <button type="submit" class="btn-primary-custom">
                        💾 Create Permission
                    </button>
                    <a asp-action="Index" class="btn-secondary-custom">
                        ← Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}