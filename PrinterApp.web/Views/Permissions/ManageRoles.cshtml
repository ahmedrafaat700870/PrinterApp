@model PermissionViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<div class="content-container">
    <div class="page-header">
        <h2>🎭 Manage Roles for: @Model.Name</h2>
        <a asp-action="Index" class="btn-secondary-custom">
            ← Back to Permissions
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert-custom alert-success-custom">
            ✓ @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert-custom alert-error-custom">
            ✗ @TempData["Error"]
        </div>
    }

    <!-- Permission Info -->
    <div class="card-custom">
        <div class="card-header-custom">
            <h2>Permission Information</h2>
        </div>
        <div class="card-body-custom">
            <div class="form-group-custom">
                <label class="form-label-custom">Permission Name</label>
                <input type="text" class="form-control-custom" value="@Model.Name" readonly />
            </div>

            <div class="form-group-custom">
                <label class="form-label-custom">Permission Code</label>
                <input type="text" class="form-control-custom" value="@Model.Code" readonly />
            </div>

            <div class="form-group-custom">
                <label class="form-label-custom">Description</label>
                <textarea class="form-control-custom" readonly>@Model.Description</textarea>
            </div>
        </div>
    </div>

    <!-- Add New Role -->
    <div class="card-custom">
        <div class="card-header-custom">
            <h2>➕ Add New Role</h2>
        </div>
        <div class="card-body-custom">
            <form asp-action="AddRole" method="post">
                <input type="hidden" name="permissionId" value="@Model.Id" />

                <div class="form-group-custom">
                    <label class="form-label-custom">Role Name</label>
                    <select name="RoleName" class="form-control-custom" required>
                        <option value="">-- Select Role --</option>
                        <option value="View">View</option>
                        <option value="Create">Create</option>
                        <option value="Edit">Edit</option>
                        <option value="Delete">Delete</option>
                        <option value="Manage">Manage (Full Access)</option>
                    </select>
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom">Description</label>
                    <input type="text" name="Description" class="form-control-custom"
                           placeholder="Describe what this role allows" />
                </div>

                <button type="submit" class="btn-primary-custom">
                    ➕ Add Role
                </button>
            </form>
        </div>
    </div>

    <!-- Existing Roles -->
    <div class="card-custom">
        <div class="card-header-custom">
            <h2>📋 Existing Roles</h2>
        </div>
        <div class="card-body-custom">
            @if (Model.Roles.Any())
            {
                <table class="table-custom">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Description</th>
                            <th>Created Date</th>
                            <th style="text-align: center; width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {
                            <tr>
                                <td>
                                    <strong style="color: var(--text-primary);">@role.RoleName</strong>
                                </td>
                                <td>@role.Description</td>
                                <td>@role.CreatedDate.ToString("MMM dd, yyyy")</td>
                                <td style="text-align: center;">
                                    <form asp-action="DeleteRole" method="post" style="display:inline;">
                                        <input type="hidden" name="roleId" value="@role.Id" />
                                        <input type="hidden" name="permissionId" value="@Model.Id" />
                                        <button type="submit" class="btn-danger-custom btn-sm-custom"
                                                onclick="return confirm('Are you sure you want to delete this role?')">
                                            🗑️ Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">🎭</div>
                    <h3 style="color: var(--medium-gray);">No Roles Found</h3>
                    <p style="color: var(--medium-gray);">Add roles to define what users can do with this permission</p>
                </div>
            }
        </div>
    </div>
</div>