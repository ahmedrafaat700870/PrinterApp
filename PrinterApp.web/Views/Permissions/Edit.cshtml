                @model PermissionViewModel

@{
    ViewData["Title"] = Lang.GetText("EditPermission");
}

<div class="content-container">
    <div class="page-header">
        <h2>✏️ @Lang.GetText("EditPermission")</h2>
        <a asp-action="Index" class="btn-secondary-custom">
            ← @Lang.GetText("BackToList")
        </a>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <h2>🛡️ @Lang.GetText("UpdatePermissionDetails")</h2>
        </div>
        <div class="card-body-custom">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="form-group-custom">
                    <label asp-for="Name" class="form-label-custom">@Lang.GetText("PermissionName")</label>
                    <input asp-for="Name" class="form-control-custom" placeholder="@Lang.GetText("PermissionNamePlaceholder")" />
                    <span asp-validation-for="Name" class="text-danger-custom"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Code" class="form-label-custom">@Lang.GetText("PermissionCode")</label>
                    <input asp-for="Code" class="form-control-custom" placeholder="@Lang.GetText("PermissionCodePlaceholder")" style="text-transform: uppercase;" />
                    <span asp-validation-for="Code" class="text-danger-custom"></span>
                    <small style="color: var(--medium-gray); display: block; margin-top: 5px;">
                        💡 @Lang.GetText("PermissionCodeHint")
                    </small>
                </div>

                <div class="form-group-custom">
                    <label asp-for="Description" class="form-label-custom">@Lang.GetText("Description")</label>
                    <textarea asp-for="Description" class="form-control-custom" rows="4" placeholder="@Lang.GetText("PermissionDescriptionPlaceholder")"></textarea>
                    <span asp-validation-for="Description" class="text-danger-custom"></span>
                </div>

                <!-- Metadata Section -->
                <div style="background: var(--input-bg); padding: 15px; border-radius: var(--border-radius); margin-bottom: 20px;">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div>
                            <label class="form-label-custom">@Lang.GetText("Created")</label>
                            <input type="text" class="form-control-custom" value="@Model.CreatedDate.ToString("MMM dd, yyyy HH:mm")" readonly style="background: var(--light-gray);" />
                        </div>
                        @* @if (Model.LastModified.HasValue)
                        {
                            <div>
                                <label class="form-label-custom">@Lang.GetText("LastModified")</label>
                                <input type="text" class="form-control-custom" value="@Model.LastModified.Value.ToString("MMM dd, yyyy HH:mm")" readonly style="background: var(--light-gray);" />
                            </div>
                        } *@
                    </div>
                </div>

                <!-- Warning Box -->
                <div style="background: var(--warning-light); padding: 15px; border-radius: var(--border-radius); margin-bottom: 20px; border-left: 4px solid var(--warning-color);">
                    <h4 style="margin: 0 0 10px 0; color: var(--warning-color); font-size: 16px;">
                        ⚠️ @Lang.GetText("Warning")
                    </h4>
                    <p style="margin: 0; color: var(--medium-gray); line-height: 1.6;">
                        @Lang.GetText("ChangePermissionCodeWarning")
                    </p>
                </div>

                <div class="action-buttons" style="margin-top: 30px;">
                    <button type="submit" class="btn-success-custom">
                        💾 @Lang.GetText("SaveChanges")
                    </button>
                    <a asp-action="Index" class="btn-secondary-custom">
                        @Lang.GetText("Cancel")
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-uppercase the code field
        document.addEventListener('DOMContentLoaded', function() {
            const codeInput = document.querySelector('input[name="Code"]');
            if (codeInput) {
                codeInput.addEventListener('input', function(e) {
                    e.target.value = e.target.value.toUpperCase().replace(/[^A-Z_]/g, '');
                });
            }
        });
    </script>
}