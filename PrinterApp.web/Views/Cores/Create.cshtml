@model CoreViewModel

@{
    ViewData["Title"] = "Create Core";
}

<div class="content-container">
    <div class="page-header">
        <h2>➕ Create New Core</h2>
        <a asp-action="Index" class="btn-secondary-custom">
            ← Back to List
        </a>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <h2>Core Information</h2>
        </div>
        <div class="card-body-custom">
            <form asp-action="Create" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary">
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <div class="form-group-custom">
                    <label asp-for="CoreName" class="form-label-custom"></label>
                    <input asp-for="CoreName" class="form-control-custom" placeholder="Enter core name (e.g., Small Core, Large Core)" />
                    <span asp-validation-for="CoreName" class="text-danger-custom"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="CoreCoefficient" class="form-label-custom"></label>
                    <input asp-for="CoreCoefficient" type="number" step="0.0001" class="form-control-custom" placeholder="Enter coefficient value" />
                    <span asp-validation-for="CoreCoefficient" class="text-danger-custom"></span>
                    <small style="color: var(--medium-gray); margin-top: 5px; display: block;">
                        💡 Core coefficient is used for calculations (e.g., 0.5, 1.25, 2.0)
                    </small>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group-custom">
                        <label asp-for="WidthCor" class="form-label-custom"></label>
                        <input asp-for="WidthCor" type="number" step="0.01" class="form-control-custom" placeholder="Width in mm" />
                        <span asp-validation-for="WidthCor" class="text-danger-custom"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="HeightCor" class="form-label-custom"></label>
                        <input asp-for="HeightCor" type="number" step="0.01" class="form-control-custom" placeholder="Height in mm" />
                        <span asp-validation-for="HeightCor" class="text-danger-custom"></span>
                    </div>
                </div>

                <div class="action-buttons" style="margin-top: 30px;">
                    <button type="submit" class="btn-success-custom">
                        💾 Create Core
                    </button>
                    <a asp-action="Index" class="btn-secondary-custom">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}