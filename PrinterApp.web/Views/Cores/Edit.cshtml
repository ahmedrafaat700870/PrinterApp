@model PrinterApp.Models.ViewModels.CoreViewModel

@{
    ViewData["Title"] = Lang.GetText("EditCore");
}

<div class="content-container">
    <div class="page-header">
        <h2>✏️ @Lang.GetText("EditCore")</h2>
        <a asp-action="Index" class="btn-secondary-custom">
            ← @Lang.GetText("BackToList")
        </a>
    </div>

    <div class="card-custom">
        <div class="card-header-custom">
            <h2>@Lang.GetText("CoreInformation")</h2>
        </div>
        <div class="card-body-custom">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary">
                        <div asp-validation-summary="All"></div>
                    </div>
                }

                <div class="form-group-custom">
                    <label asp-for="CoreName" class="form-label-custom">@Lang.GetText("CoreName")</label>
                    <input asp-for="CoreName" class="form-control-custom" placeholder="@Lang.GetText("EnterCoreName")" />
                    <span asp-validation-for="CoreName" class="text-danger-custom"></span>
                </div>

                <div class="form-group-custom">
                    <label asp-for="CoreCoefficient" class="form-label-custom">@Lang.GetText("CoreCoefficient")</label>
                    <input asp-for="CoreCoefficient" type="number" step="0.0001" class="form-control-custom" placeholder="@Lang.GetText("EnterCoefficientValue")" />
                    <span asp-validation-for="CoreCoefficient" class="text-danger-custom"></span>
                    <small style="color: var(--medium-gray); margin-top: 5px; display: block;">
                        💡 @Lang.GetText("CoreCoefficientUsedForCalculations")
                    </small>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group-custom">
                        <label asp-for="WidthCor" class="form-label-custom">@Lang.GetText("WidthCor")</label>
                        <input asp-for="WidthCor" type="number" step="0.01" class="form-control-custom" placeholder="@Lang.GetText("WidthInMm")" />
                        <span asp-validation-for="WidthCor" class="text-danger-custom"></span>
                    </div>

                    <div class="form-group-custom">
                        <label asp-for="HeightCor" class="form-label-custom">@Lang.GetText("HeightCor")</label>
                        <input asp-for="HeightCor" type="number" step="0.01" class="form-control-custom" placeholder="@Lang.GetText("HeightInMm")" />
                        <span asp-validation-for="HeightCor" class="text-danger-custom"></span>
                    </div>
                </div>

                <div class="form-check-custom" style="margin-bottom: 20px;">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input-custom" id="isActive" />
                    <label for="isActive" class="form-check-label-custom">
                        @Lang.GetText("CoreIsActive")
                    </label>
                </div>

                <div style="background: var(--input-bg); padding: 15px; border-radius: var(--border-radius); margin-bottom: 20px;">
                    <div style="display: flex; justify-content: space-between; color: var(--medium-gray); font-size: 14px; flex-wrap: wrap; gap: 10px;">
                        <div>
                            <strong>@Lang.GetText("Created"):</strong> @Model.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                        </div>
                        @if (Model.LastModified.HasValue)
                        {
                            <div>
                                <strong>@Lang.GetText("LastModified"):</strong> @Model.LastModified.Value.ToString("MMM dd, yyyy HH:mm")
                            </div>
                        }
                    </div>
                </div>

                <div class="action-buttons" style="margin-top: 30px;">
                    <button type="submit" class="btn-success-custom">
                        💾 @Lang.GetText("SaveChanges")
                    </button>
                    <a asp-action="Index" class="btn-secondary-custom">
                        @Lang.GetText("Cancel")
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Format coefficient input
        const coefficientInput = document.querySelector('input[name="CoreCoefficient"]');
        if (coefficientInput) {
            coefficientInput.addEventListener('blur', function() {
                if (this.value) {
                    this.value = parseFloat(this.value).toFixed(4);
                }
            });
        }

        // Format dimension inputs
        const widthInput = document.querySelector('input[name="WidthCor"]');
        const heightInput = document.querySelector('input[name="HeightCor"]');

        [widthInput, heightInput].forEach(input => {
            if (input) {
                input.addEventListener('blur', function() {
                    if (this.value) {
                        this.value = parseFloat(this.value).toFixed(2);
                    }
                });
            }
        });
    </script>
}